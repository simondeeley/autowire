{
    "name": "simondeeley/autowire",
    "description": "A lightweight dependency injection package that supports auto-wiring.",
    "type": "library",
    "keywords": ["php", "container", "dependency injection", "autowire"],
    "time": "2021-01-15",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Deeley",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/simondeeley/autowire/issues"
    },
    "require-dev": {
        "phpspec/phpspec": "^7",
        "psr/container": "^1.0"
    },
    "provide": {
        "psr/container-implementation": "1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Autowire\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "config": {        
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpspec run"
    }
}
